<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_CENTER" fx:id="vbox"

      xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sons.mamoun.Controller">
        <TextArea fx:id="text" prefHeight="200"/>

        <GridPane fx:id="grid" alignment="CENTER" hgap="10" vgap="10">
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
        </GridPane>
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="bt1" alignment="CENTER" text="Update" onAction="#update"/>
            <Button fx:id="bt2" alignment="CENTER" text="Find Player" onAction="#find_players"/>
            <Button fx:id="bt3" alignment="CENTER" text="Challenge" onAction="#start_game"/>
            <TextField fx:id="txt3"/>

        </HBox>

        <GridPane alignment="CENTER" hgap="10" vgap="10"  >
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
            <Label text="Name : " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txt1" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Country : " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txt2" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button fx:id="bt4" alignment="CENTER" text="register" onAction="#register" GridPane.columnIndex="1"
                    GridPane.rowIndex="2"/>

        </GridPane>

</VBox>
